    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "request": "launch",
            "type":"cppdbg",
            "windows": {
                "program": "${workspaceFolder}/win32/build_debug/shimmer_win32_c_ocoa.exe",
                "type": "cppvsdbg",
                "args": ["--test", "NSApplication.dump.txt" ],
                "cwd": "${workspaceFolder}/win32/"
            },
            "osx": {
                "MIMode": "llvm",
                "program": "${workspaceFolder}/osx/build_debug/shimmer_osx_c_coca",
                "type": "cppdbg",
                //"args": ["--test", "NSApplication.dump.txt" ],
                "cwd": "${workspaceFolder}/osx/"
            },
            "stopAtEntry": false,
            "environment": [],
        },
        {
            "name": "Launch Release",
            "request": "launch",
            "windows": {
                "program": "${workspaceFolder}/win32/build_release/shimmer_win32_c_ocoa.exe",
                "type": "cppvsdbg",
                "args": ["--test", "NSApplication.dump.txt" ],
                "cwd": "${workspaceFolder}/win32/"
            },
            "osx": {
                "program": "${workspaceFolder}/osx/build_release/shimmer_osx_c_ocoa",
                "type": "cppdbg",
                //"args": ["--test", "NSApplication.dump.txt" ],
                "cwd": "${workspaceFolder}/osx/"
            },
            
            "stopAtEntry": false,
            "environment": [],
        },
    ]
}